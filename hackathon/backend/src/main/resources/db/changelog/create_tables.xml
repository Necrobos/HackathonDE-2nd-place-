<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="001-create-courses-table" author="dev">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="courses" schemaName="dm"/>
            </not>
        </preConditions>
        <createTable tableName="courses" schemaName="dm">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="TEXT"/>
            <column name="url" type="VARCHAR(500)"/>
        </createTable>
    </changeSet>

    <changeSet id="002-create-downloaded_files-table" author="dev">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="downloaded_files" schemaName="dm"/>
            </not>
        </preConditions>
        <createTable tableName="downloaded_files" schemaName="dm">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="TEXT"/>
            <column name="course_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="003-create-tags-table" author="dev">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="tags" schemaName="dm"/>
            </not>
        </preConditions>
        <createTable tableName="tags" schemaName="dm">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="004-create-chunks-table" author="dev">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="chunks" schemaName="dm"/>
            </not>
        </preConditions>
        <createTable tableName="chunks" schemaName="dm">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="id_file" type="BIGINT"/>
            <column name="source_url" type="TEXT"/>
            <column name="content" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE"/>
        </createTable>
    </changeSet>

    <changeSet id="005-create-chunk_tags-table" author="dev">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="chunk_tags" schemaName="dm"/>
            </not>
        </preConditions>
        <createTable tableName="chunk_tags" schemaName="dm">
            <column name="chunk_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="tag_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
